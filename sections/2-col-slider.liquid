{% style %}
    #scroll-slider-{{ section.id }}{
    opacity: 0;
    transition: opacity .35s ease-out;
    --slides: 3;
    height: 100%;
    position: relative;
    height: calc(var(--slides) * 100vh);
    }
    #scroll-slider-{{ section.id }} .scroll-slider__inner{
    position: sticky;
    top: 80px;
    }

    #scroll-slider-{{ section.id }} .scroll-slider__header{
    text-align: center;
    margin-bottom: 80px;
    }

    #scroll-slider-{{ section.id }} .scroll-slider__small{
    font-family: 'PP Neue Montreal', sans-serif;
    font-size: 16px;
    margin: 0 0 36px;
    font-weight: 450;
    line-height: 24px;
    letter-spacing: 0px;
    color: #000000;
    text-transform: capitalize;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__title{
    font-weight: 600;
    line-height: 1.2;
    max-width: 885px;
    margin: 0 auto;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__title p{
    font-family: 'Aeonik Light', sans-serif;
    font-weight: 250;
    font-size: 52px;
    line-height: 100%;
    letter-spacing: -1.5%;
    text-align: center;
    vertical-align: middle;
    color: #00000099;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__title strong{
    font-family: 'Aeonik Regular', sans-serif;
    font-weight: 400;
    color: #000;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__steps{
    display: grid;
    gap: 12%;
    margin: 0;
    padding: 0;
    height: 100%;
    list-style: none;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__step{
    transition: opacity .35s ease-in;
    }
    #scroll-slider-{{ section.id }} .step__icon-wrapper{
    opacity:0;
    height: 0;
    transition: opacity 0.1s ease-out;
    }
    #scroll-slider-{{ section.id }} .step__icon-wrapper .step__icon{
    margin: 0 0 32px 0;
    }
    #scroll-slider-{{ section.id }} .step__title{
    margin: 0;
    font-family: "Aeonik Regular", sans-serif;
    font-weight: 400;
    font-size: 32px;
    line-height: 110.00000000000001%;
    letter-spacing: -1.5%;
    color: #1A1D2966;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__step.is-active .step__title{
    color: #1A1D29;
    }
    #scroll-slider-{{ section.id }} .step__text{
    opacity:0;
    transition: opacity 0.1s ease-out;
    pointer-events: none;
    font-family: "Neue Montreal", sans-serif;
    font-weight: 400;
    line-height: 130%;
    letter-spacing: 0px;
    color: #00000099;
    font-size: 16px;
    position: relative;
    height: 0;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__step.is-active .step__icon-wrapper{
    opacity: 1;
    height: auto;
    transition: opacity 0.35s ease-in;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__step.is-active .step__text{
    opacity: 1;
    pointer-events: auto;
    margin-top: 32px;
    transition: opacity 0.35s ease-in;
    height: auto;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__step.is-active .step__text p{
    color: #00000099;
    }
    #scroll-slider-{{ section.id }} .step__media--mobile{
    margin-top:12px;
    }
    #scroll-slider-{{ section.id }} .js-slider__slide{
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity .35s ease-in-out;
    pointer-events: none;
    }
    #scroll-slider-{{ section.id }} .js-slider__slide.is-active{
    opacity: 1;
    position: relative;
    pointer-events: auto;
    z-index: 1;
    }
    #scroll-slider-{{ section.id }} .slider__nav{
    position:absolute;
    bottom:12px;
    left:12px;
    display:flex;
    gap:8px;
    z-index: 2;
    }
    #scroll-slider-{{ section.id }} .slider__media{
    overflow: hidden;
    margin: 0;
    max-height: 518px;
    height: 100%;
    }
    #scroll-slider-{{ section.id }} .slider__media img{
    width:100%;
    border-radius:14px;
    display:block;
    }
    #scroll-slider-{{ section.id }} .slider__arrow{
    width:40px;
    height:40px;
    border-radius:50%;
    background:#fff;
    border:1px solid rgba(0,0,0,.1);
    display:grid;
    place-items:center;
