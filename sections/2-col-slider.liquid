    display: none;
    }
    #scroll-slider-{{ section.id }} .slider__nav{
    display: none;
    }
    #scroll-slider-{{ section.id }} .step__media--mobile{
    display: none;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__step.is-active .step__media--mobile{
    display: block;
    height: 280px;
    margin: 0;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__step.is-active .step__media--mobile img{
    width: 100%;
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    border-radius: 16px;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__left{
    padding: 0;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__step.is-active .step__text{
    margin: 24px 0;
    }
    #scroll-slider-{{ section.id }} .scroll-slider__steps{
