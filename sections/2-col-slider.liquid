<section id="scroll-slider-{{ section.id }}" class="scroll-slider">
    <div class="scroll-slider__inner page-width">
        <div class="scroll-slider__header">
            {%- if section.settings.small_heading != blank -%}
                <p class="scroll-slider__small">{{ section.settings.small_heading }}</p>
            {%- endif -%}
            <div class="scroll-slider__title rte">{{ section.settings.title_rich }}</div>
        </div>
        <div class="scroll-slider__grid" style="--media-w: {{ section.settings.desktop_media_width }}%;">
            <div class="scroll-slider__left">
                <ol class="scroll-slider__steps js-steps">
                    {%- for block in section.blocks -%}
                        <li id="step-{{ section.id }}-{{ forloop.index0 }}"
                            class="scroll-slider__step js-step"
                            data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
                            <div class="step__head">
                                {%- if block.settings.icon != blank -%}
                                    <div class="step__icon-wrapper">
                                        <figure class="step__icon">
                                            {{ block.settings.icon | image_url: width: 40 | image_tag: loading: 'lazy', sizes: '40px', alt: block.settings.image_alt | escape }}
                                        </figure>
                                    </div>
                                {%- endif -%}
                                <h3 class="step__title">{{ block.settings.title | escape }}</h3>
                            </div>
                            {%- if block.settings.text != blank -%}
                                <div class="step__text rte">{{ block.settings.text }}</div>
                            {%- endif -%}

                            {%- if block.settings.image != blank -%}
                                <figure class="step__media step__media--mobile">
                                    {{ block.settings.image | image_url: width: 1440 | image_tag: loading: 'lazy', sizes: '(max-width: 749px) 100vw', alt: block.settings.image_alt | escape }}
                                </figure>
                            {%- endif -%}
                        </li>
                    {%- endfor -%}
                </ol>
            </div>

            <div class="scroll-slider__right">
                <div class="slider js-slider" aria-live="polite">
                    {%- for block in section.blocks -%}
                        <div class="js-slider__slide{% if forloop.first %} is-active{% endif %}" data-index="{{ forloop.index0 }}">
                            {%- if block.settings.image != blank -%}
                                <figure class="slider__media">
                                    {{ block.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', sizes: '(min-width: 990px) calc(var(--media-w) * 1vw)', alt: block.settings.image_alt | escape }}
                                </figure>
                            {%- endif -%}
                        </div>
                    {%- endfor -%}
                </div>
                <div class="slider__nav">
                    <button class="slider__arrow slider__arrow--prev js-prev" aria-label="Previous">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" width="18" height="18" aria-hidden="true"><path d="M12.5 3.5L6 10l6.5 6.5" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    </button>
                    <button class="slider__arrow slider__arrow--next js-next" aria-label="Next">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" width="18" height="18" aria-hidden="true"><path d="M7.5 3.5L14 10l-6.5 6.5" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        const root = document.getElementById('scroll-slider-{{ section.id }}');
        if (!root) return;

        const slides = Array.from(root.querySelectorAll('.js-slider__slide'));
        const steps = Array.from(root.querySelectorAll('.js-step'));
        if (!slides.length) return;

        let current = slides.findIndex(slide => slide.classList.contains('is-active'));
        if (current < 0) current = 0;

        slides.forEach((el, idx) => el.classList.toggle('is-active', idx === current));
        steps.forEach((el, idx) => el.classList.toggle('is-active',  idx === current));

        root.style.setProperty('--slides', String(slides.length));

        function setActive(i){
            if (i < 0 || i >= slides.length || i === current) return;
            slides.forEach((el, idx) => el.classList.toggle('is-active', idx === i));
            steps.forEach((el, idx) => el.classList.toggle('is-active',  idx === i));
            current = i;
        }

        function showSlider(){
            document.querySelector('#scroll-slider-{{ section.id }}').style.opacity = '1';
        }

        function viewportHeight(){
            return window.innerHeight || document.documentElement.clientHeight;
        }

        function getSpan(){
            const vh = viewportHeight();
            const start = root.offsetTop;
            const end = start + root.offsetHeight - vh;
            const span = Math.max(1, end - start);
            const per = span / slides.length;
            return { start, end, span, per };
        }

        function centerYForIndex(i){
            const { start, per } = getSpan();
            return start + per * (i + 0.5);
        }

        let suppressSync = false;
        function jumpToIndex(i){
            const y = centerYForIndex(i);
            suppressSync = true;
            window.scrollTo({ top: y, behavior: 'auto' });
            setActive(i);
            setTimeout(() => { suppressSync = false; }, 150);
        }

        function updateByScroll(){
            if (suppressSync) return;

            const { start, end, span } = getSpan();
            const windowY = window.scrollY;

            if (windowY < start || windowY > end) return;

            const p = (windowY - start) / span;

            const per = 1 / slides.length;
            const idx = Math.min(slides.length - 1, Math.max(0, Math.floor(p / per + 0.5)));

            if (idx !== current) {
                setActive(idx);
            }
        }

        window.addEventListener('scroll', updateByScroll);

        window.addEventListener('resize', () => {
            root.style.setProperty('--slides', String(slides.length));
            updateByScroll();
        });

        root.addEventListener('click', (e) => {
            const prev = e.target.closest('.js-prev');
            const next = e.target.closest('.js-next');
            if (!prev && !next) return;
            e.preventDefault();

            if (prev){
                const nextIdx = Math.max(0, current - 1);
                jumpToIndex(nextIdx);
            }
            if (next){
                const nextIdx = Math.min(slides.length - 1, current + 1);
                jumpToIndex(nextIdx);
            }
        });

        root.addEventListener('click', (e) => {
            const step = e.target.closest('.js-step');
            if (!step) return;
            const idx = Number(step.dataset.index);
            if (Number.isNaN(idx)) return;
            jumpToIndex(idx);
        });

        updateByScroll();
        showSlider();
    });
</script>

